#!/bin/sh

# Lightweight script to show RAM usage as a single bar.

# Read total and available RAM in KB from /proc/meminfo
total=$(awk '/MemTotal:/ {print $2}' /proc/meminfo)
available=$(awk '/MemAvailable:/ {print $2}' /proc/meminfo)

# Calculate percentage of RAM used
used_percent=$(( (total - available) * 100 / total ))

# Display a bar according to the usage percentage
bar_count=$(( used_percent / 12 ))  # Scale to fit in 8 levels

# Array of bar levels, from light to full
bars=(▁ ▂ ▃ ▄ ▅ ▆ ▇ █)

# Output appropriate bar character
printf "%s\n" "${bars[bar_count]}"
